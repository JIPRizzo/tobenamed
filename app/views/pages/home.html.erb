

<!-- Call To Action Instructions | Header -->

<div class="home-container">
  <h1> St<%= cl_image_tag("radish", width: 65, height: 65) %>p W<%= cl_image_tag("avocado", width: 65, height: 65) %>ndering </h1>
  <h2> around for <span class="greenText">VEGAN</span> food; </h2>
  <h3> find a chef! </h3>
</div>

<!-- Call To Action | Select Date & Select Type of Cuisine -->

<div class="home-search-wrapper">
  <form action="/chefs" method="get" class="form-inline home-form-box"">
    <div class="home-form-inputs">
        <%= select_tag 'food_choice', options_for_select(@meal_types.insert(0,"Meal Type")), {class: "form-control home-form-control"}  %>
      <input class="search datepicker form-control home-form-control" type="text" placeholder="When?" id= "select_date" name="end_date">
    </div>
    <div class="home-form-button">
      <button class="tbn-submit-btn btn btn-primary" type="submit">
        <span class="black-box-text">GET CHEF</span>
      </button>
    </div>
  </form>
</div>

<!-- How it works Cards -->

<h1 class="hiw-font text-center">How it works </h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="hiw-icons text-center"><%= cl_image_tag("search-icons", width: 80, height: 80) %>
          </div>
        <div class="design-card text-center"><p>Select preferred meal type and date you need chef over.</p>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="hiw-icons text-center"><%= cl_image_tag("menuicon", width: 80, height: 80) %>
        </div>

        <div class="design-card text-center"><p>Select chef and your preferred vegan menu.</p></div>

      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="hiw-icons text-center"><%= cl_image_tag("cheficon", width: 80, height: 80) %>
        </div>
        <div class="design-card text-center"><p>Specify eventy type and enjoy :).</p></div>
      </div>
    </div>
  </div>

  <!-- Chef Cards -->
  <div class="home-wrapper-card">
    <div class="container">
      <div class="row">
        <% @chefs.each do |chef| %>
        <div class="col-xs-12 col-sm-4">
          <div class="home-card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.2)), url('<%= cl_image_path chef.menus.sample.photos.sample.path, width: 200 %>');">
            <div class="home-card-description">
              <h2> <%= chef.name  %> </h2>
              <p>  <%= chef.short_description %> </p>
            </div>
            <%= cl_image_tag chef.avatar.path, width: 100, crop: :thumb, gravity: :face, class: "index-card-user avatar" %><a class="index-card-link" href="<%= chef_path(chef) %>" ></a>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>






