
<div class="container-menu">
  <div class="menu-body">
      <div class="menu-section">
        <h2><%= @selected_menu.name %></h2>

      </div>

      <div class="menu-section">
        <div class="menu-card-description">
        <h2>Description</h2>
        <p><%= @selected_menu.description %></p>
        </div>
      </div>
    </div>
</div>


<div id="box">

  <div class="bubble">
  <div class="rectangle"><h2><%= @chef.name %></h2></div>
  <div class="triangle-l"></div>

  <div class="info">
  <h2><%= @chef.name %></h2>
  <p>
  <%= @chef.description %>
  </p>

  </div>
  </div>

</div>



<% if current_user %>

<div class="form_new ">
<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

<div class="form_new_design">
  <div class="form-inputs">
    <%= f.input :address, required:false %>
    <%= f.input :guests, required:false%>
    <%= f.input :date, required:false %>
    <%= f.input :event_type, required:false %>
    <%= f.input :chef_id, value: @chef.id, hidden:true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
</div>

<% else %>

<%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

<% end %>







