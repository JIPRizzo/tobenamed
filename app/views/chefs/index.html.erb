<div class="chef-cards-wrapper"><div class="container">
    <div class="row">
      <% @chefs.each do |chef | %>
      <div class="col-xs-12 col-md-4">
        <div class="chef-card">
          <div class="card-category"><%= "$#{toy.price_usd} per day" %></div>
          <div class="card-description">
            <h2><%= chef.name %></h2>
            <p><%= chef.description %></p>
          </div>
          <%= cl_image_tag chef.image.path, class: "card-user chef-avatar" %>
          <a class="card-link" href="<%= chef_path(toy) %>"></a>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>
